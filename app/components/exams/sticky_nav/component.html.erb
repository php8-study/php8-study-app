<div data-controller="sticky-nav"
     data-result-reveal-target="actionButtons"
     data-sticky-nav-footer-selector-value="#global-footer"
     class="<%= nav_classes %>">
  
  <div class="container mx-auto px-4 py-4">
    <div class="flex flex-col sm:flex-row justify-center gap-4">
      <%= link_to root_path, class: "px-8 py-4 bg-white border border-slate-200 text-slate-600 font-bold rounded-xl hover:bg-slate-50 hover:border-slate-300 transition-all shadow-sm text-center" do %>
        トップへ戻る
      <% end %>

      <%= link_to exams_path, class: "px-8 py-4 bg-indigo-600 text-white font-bold rounded-xl hover:bg-indigo-700 hover:shadow-lg hover:-translate-y-0.5 transition-all shadow-md flex items-center justify-center" do %>
        <span>履歴一覧へ</span>
        <%= helpers.inline_svg_tag "icons/right_arrow.svg", class: "w-5 h-5 ml-2", aria_hidden: true %>
      <% end %>
    </div>
  </div>
</div>

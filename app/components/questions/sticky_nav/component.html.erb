<div data-controller="sticky-nav"
     data-sticky-nav-footer-selector-value="#global-footer"
     class="fixed bottom-0 left-0 w-full z-50 pb-6 pointer-events-none transition-transform duration-300">

  <div class="max-w-3xl mx-auto px-4 sm:px-6">

    <nav class="pointer-events-auto flex flex-col sm:flex-row gap-4 pt-4 border-t border-slate-200">

      <%= render Common::Button::Component.new(
            href: root_path,
            variant: :secondary,
            size: :md,
            class: "flex-1 border-slate-300 text-slate-700 shadow-sm"
          ) do %>
        <%= helpers.inline_svg_tag "icons/home.svg", class: "w-5 h-5 mr-2 -ml-1 text-slate-400", aria_hidden: true %>
        トップへ戻る
      <% end %>

      <% if @next_path %>
        <%= render Common::Button::Component.new(
              href: @next_path,
              variant: :primary,
              size: :md,
              class: "flex-1 shadow-sm hover:shadow-lg"
            ) do %>
          <span>次の問題へ</span>
          <%= helpers.inline_svg_tag "icons/right_arrow.svg", class: "w-5 h-5 ml-2 -mr-1", aria_hidden: true %>
        <% end %>
      <% end %>

    </nav>
  </div>
</div>

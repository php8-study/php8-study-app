<aside class="bg-white rounded-xl border border-slate-200 p-6 shadow-sm overflow-visible relative">
  <div class="flex items-center gap-2 mb-4">
    <%= helpers.inline_svg_tag "icons/book.svg", class: "w-5 h-5 text-slate-400", aria_hidden: true %>
    <h3 class="text-sm font-bold text-slate-500 uppercase tracking-wider">Reference</h3>
  </div>

  <% if present? %>
    <div class="flex items-center justify-center bg-slate-50 p-4 rounded-lg border border-slate-100 relative">

      <div class="flex items-center gap-4">
        <span class="text-slate-600 font-medium">公式テキスト参照箇所</span>

        <%= helpers.inline_svg_tag "icons/arrow_long_right.svg", class: "w-6 h-6 text-indigo-400", aria_hidden: true %>

        <%= render Common::Tooltip::Component.new(classes: "relative inline-block group cursor-help") do %>

          <div class="flex items-center gap-2">
            <span class="text-xs text-slate-400 group-hover:text-indigo-600 transition-colors">PAGE</span>

            <span class="text-xl font-black text-indigo-600"><%= official_page %></span>

            <span class="ml-1 text-slate-400 group-hover:text-indigo-600 transition-all duration-200 group-hover:scale-110 bg-slate-200/50 rounded-full p-0.5 flex items-center justify-center">
              <%= helpers.inline_svg_tag "icons/info_circle.svg", class: "w-5 h-5", aria_hidden: true %>
            </span>
          </div>

        <% end %>
      </div>

    </div>
  <% else %>
    <p class="text-slate-400 text-sm">この問題には参照情報が設定されていません。</p>
  <% end %>
</aside>

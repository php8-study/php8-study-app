<header class="bg-white/90 backdrop-blur-sm sticky top-0 z-50 border-b border-slate-200">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex items-center justify-between h-16">

      <div class="flex-shrink-0">
        <%= link_to root_path, class: "flex items-center gap-0.5 hover:opacity-80 transition-opacity" do %>
          <span class="text-slate-900 font-black text-2xl tracking-tighter">PHP8</span>
          <span class="text-blue-600 font-black text-2xl tracking-tighter">Study</span>
        <% end %>
      </div>

      <div class="flex items-center gap-4">
        <% if logged_in? %>
          <div class="text-right hidden sm:block">
            <div class="text-[10px] text-slate-400 font-bold uppercase tracking-wider">Logged in</div>
            <div class="text-sm font-bold text-slate-700 leading-none"><%= nickname %></div>
          </div>

          <% if avatar_url %>
            <%= image_tag avatar_url, alt: "#{nickname}のアバター", class: "w-9 h-9 rounded-full border border-slate-200 shadow-sm" %>
          <% end %>

          <%= render Common::IconButton::Component.new(
            href: session_path,
            icon: "logout",
            method: :delete,
            variant: :secondary,
            title: "ログアウト"
          ) %>

        <% else %>
          <%= link_to "GitHubでログイン", "/auth/github", class: "text-sm font-bold text-slate-700 hover:text-blue-600 transition-colors" %>
        <% end %>

      </div>
    </div>
  </div>
</header>

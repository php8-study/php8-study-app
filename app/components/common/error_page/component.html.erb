<main class="min-h-[calc(100vh-64px)] bg-slate-50 flex items-center justify-center px-4 sm:px-6 lg:px-8">
  <div class="max-w-md w-full text-center">

    <div class="relative" aria-hidden="true">
      <span class="block text-9xl font-black text-slate-200 select-none"><%= @code %></span>

      <div class="absolute inset-0 flex items-center justify-center">
        <div class="<%= class_names("px-4 py-2 text-sm font-mono rounded shadow-sm transform", @badge_classes) %>">
          <%= @badge_text %>
        </div>
      </div>
    </div>

    <h1 class="mt-8 text-2xl font-bold text-slate-900"><%= @title %></h1>

    <div class="mt-2 text-slate-500">
      <%= content %>
    </div>

  </div>
</main>

<figure class="relative bg-slate-900 rounded-2xl shadow-2xl overflow-hidden border border-slate-700/50">

  <div class="bg-slate-800/50 px-4 py-3 flex items-center gap-2 border-b border-white/5" aria-hidden="true">
    <div class="w-3 h-3 rounded-full bg-red-500"></div>
    <div class="w-3 h-3 rounded-full bg-amber-500"></div>
    <div class="w-3 h-3 rounded-full bg-emerald-500"></div>

    <div class="ml-4 text-xs font-mono text-slate-500">
      <%= @label %>
    </div>
  </div>

  <div class="p-6 md:p-8 overflow-x-auto">
    <pre class="font-mono text-base md:text-lg leading-relaxed text-slate-300 whitespace-pre-wrap break-words"><%= @content %></pre>
  </div>
</figure>

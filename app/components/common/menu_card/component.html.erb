<%= link_to @url, class: "group flex items-center bg-white rounded-xl p-6 shadow-sm border-2 border-transparent #{theme_styles[:border]} hover:shadow-lg hover:scale-[1.02] transition-all duration-300 ease-out" do %>

  <div class="flex-shrink-0 mr-6">
    <div class="w-16 h-16 rounded-xl <%= theme_styles[:icon_bg] %> flex items-center justify-center shadow-md group-hover:scale-110 group-hover:rotate-3 transition-transform duration-300">
      <%= helpers.inline_svg_tag icon_path, class: "w-8 h-8 text-white drop-shadow-sm", aria_hidden: true %>
    </div>
  </div>

  <div class="flex-1 min-w-0">
    <h3 class="text-xl font-bold text-slate-800 mb-1 <%= theme_styles[:text_hover] %> transition-colors">
      <%= @title %>
    </h3>
    <p class="text-sm font-medium text-slate-500 leading-relaxed">
      <%= @description %>
    </p>
  </div>

  <div class="flex-shrink-0 ml-4 opacity-0 -translate-x-2 group-hover:opacity-100 group-hover:translate-x-0 transition-all duration-300">
    <div class="w-10 h-10 rounded-full bg-slate-50 flex items-center justify-center">
      <%= helpers.inline_svg_tag "icons/chevron-right.svg", class: "w-6 h-6 text-slate-400", aria_hidden: true %>
    </div>
  </div>
<% end %>

<%= form_with(model: [:admin, @category], class: "contents") do |f| %>

  <%= render Common::ErrorMessages::Component.new(object: f.object) %>

  <section class="max-w-3xl mx-auto" aria-label="カテゴリー情報入力">
    <div class="bg-white shadow-sm rounded-xl border border-slate-200 p-8 space-y-8">

      <div>
        <%= f.label :name, "タイトル", class: label_classes %>
        <%= f.text_field :name, class: input_classes, required: true, placeholder: "カテゴリー名を入力" %>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
        <div>
          <%= f.label :chapter_number, "章番号", class: label_classes %>
          <%= f.number_field :chapter_number, class: input_classes, required: true, placeholder: "1" %>
        </div>

        <div>
          <%= f.label :weight, "出題割合 (%)", class: label_classes %>
          <div class="relative">
            <%= f.number_field :weight, class: input_classes(suffix: true), required: true, step: 0.1, min: 0, max: 100, placeholder: "0.0" %>

            <div class="pointer-events-none absolute inset-y-0 right-0 flex items-center pr-3" aria-hidden="true">
              <span class="text-slate-400 font-bold">%</span>
            </div>
          </div>
        </div>
      </div>

      <div class="pt-8 border-t border-slate-100 flex justify-end gap-3">
        <%= render Common::Button::Component.new(
              href: admin_categories_path,
              variant: :secondary,
              class: "shadow-sm"
            ) do %>
          キャンセル
        <% end %>

        <%= render Common::Button::Component.new(
              type: :submit,
              variant: :primary,
              class: "shadow-sm"
            ) do %>
          保存する
        <% end %>
      </div>

    </div>
  </section>
<% end %>

<%= helpers.turbo_frame_tag @category do %>
  <%= form_with(model: [:admin, @category], class: "contents") do |f| %>

    <%= render Common::ErrorMessages::Component.new(object: @category, classes: "col-span-5") %>

    <div class="grid items-center px-4 py-4 rounded border-2 border-blue-400 shadow-md bg-blue-50/10 <%= @grid_cols %>" role="listitem">

      <span class="ml-2">
        <%= f.number_field :chapter_number, class: input_classes(align: :center), required: true, aria: { label: "章番号" } %>
      </span>

      <span class="pl-2">
        <%= f.text_field :name, class: input_classes, required: true, aria: { label: "タイトル" } %>
      </span>

      <div></div>

      <div class="flex items-center gap-2 justify-end">
        <%= f.number_field :weight, class: "border border-slate-300 rounded p-1 w-16 text-right text-sm focus:border-blue-500 focus:ring-1 focus:ring-blue-500", min: 0, max: 100, step: 0.1, aria: { label: "出題割合(%)" } %>
        <span class="text-sm text-slate-600 pr-2" aria-hidden="true">%</span>
      </div>

      <div class="flex items-center gap-2 justify-center">
        <%= render Common::IconButton::Component.new(
          icon: "check",
          type: :submit,
          variant: :primary,
          title: "保存"
      ) %>

        <%= render Common::IconButton::Component.new(
          href: admin_category_path(@category),
          icon: "x",
          variant: :secondary,
          title: "キャンセル",
          data: { turbo_frame: dom_id(@category) }
      ) %>
      </div>

    </div>
  <% end %>
<% end %>

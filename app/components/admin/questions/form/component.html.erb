<%= form_with model: [:admin, @question], class: "space-y-8", data: { controller: "nested-form" } do |f| %>

  <%= render Common::ErrorMessages::Component.new(object: f.object) %>

  <template data-nested-form-target="template">
    <%= f.fields_for :question_choices, QuestionChoice.new, child_index: "NEW_RECORD" do |choice_fields| %>
      <%= render Admin::Questions::Form::ChoiceFields::Component.new(f: choice_fields) %>
    <% end %>
  </template>

  <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">

    <div class="lg:col-span-2 space-y-6">

      <section class="bg-white shadow-sm rounded-xl border border-slate-200 p-6" aria-label="問題詳細">
        <div class="space-y-6">
          <div>
            <%= f.label :content, "問題文", class: label_classes %>
            <%= f.text_area :content, rows: 5, class: input_classes, placeholder: "ここに問題文を入力してください..." %>
          </div>

          <div>
            <div class="flex items-center justify-between mb-2">
              <%= f.label :explanation, "解説", class: "block text-sm font-bold text-slate-600" %>
              <span class="text-xs text-slate-500 font-bold bg-slate-100 px-2 py-1 rounded border border-slate-200">任意</span>
            </div>
            <%= f.text_area :explanation, rows: 8, class: "#{input_classes} bg-slate-50/50", placeholder: "解説を入力..." %>
          </div>
        </div>
      </section>

      <section class="bg-white shadow-sm rounded-xl border border-slate-200 p-6" aria-labelledby="choices-heading">
        <div class="flex items-center justify-between mb-6">
          <h2 id="choices-heading" class="text-lg font-bold text-indigo-900">選択肢の管理</h2>
          <span class="text-xs text-indigo-600 bg-indigo-50 px-2.5 py-1 rounded-full font-medium">正解にチェックを入れてください</span>
        </div>

        <div id="choices_container" data-nested-form-target="target" class="space-y-3" role="list" aria-label="選択肢リスト">
          <%= f.fields_for :question_choices do |choice_fields| %>
            <%= render Admin::Questions::Form::ChoiceFields::Component.new(f: choice_fields) %>
          <% end %>
        </div>

        <div class="mt-6 pt-4 border-t border-slate-100">
          <button type="button" data-action="nested-form#add" class="w-full inline-flex items-center justify-center px-4 py-3 border-2 border-dashed border-slate-300 rounded-lg text-sm font-bold text-slate-500 hover:border-indigo-400 hover:text-indigo-600 hover:bg-indigo-50/50 transition-all cursor-pointer">
            <%= helpers.inline_svg_tag "icons/plus.svg", class: "w-5 h-5 mr-2 text-slate-400 group-hover:text-indigo-500", aria_hidden: true %>
            選択肢を追加
          </button>
        </div>
      </section>
    </div>

    <div class="lg:col-span-1 space-y-6">
      <section class="bg-white shadow-sm rounded-xl border border-slate-200 p-6 sticky top-24" aria-labelledby="settings-heading">
        <h2 id="settings-heading" class="text-sm font-bold text-indigo-900 uppercase tracking-wider mb-6">設定</h2>

        <div class="space-y-6">
          <div>
            <%= f.label :category_id, "カテゴリー", class: label_classes %>
            <%= f.collection_select :category_id, categories, :id, :name, {}, class: input_classes %>
          </div>

          <div>
            <%= f.label :official_page, "公式テキスト参照", class: label_classes %>
            <div class="relative rounded-md shadow-sm">
              <div class="pointer-events-none absolute inset-y-0 left-0 flex items-center pl-4" aria-hidden="true">
                <span class="text-slate-400 font-medium">P.</span>
              </div>
              <%= f.text_field :official_page, class: "#{input_classes} pl-10", placeholder: "25-28" %>
            </div>
            <p class="mt-2 text-xs text-slate-500">例: 152, 25-28</p>
          </div>

          <div class="pt-6 border-t border-slate-100 flex flex-col gap-3">
            <%= render Common::Button::Component.new(
                  type: :submit,
                  variant: :primary,
                  class: "w-full shadow-sm"
                ) do %>
              保存する
            <% end %>

            <%= render Common::Button::Component.new(
                  href: admin_questions_path,
                  variant: :secondary,
                  class: "w-full shadow-sm"
                ) do %>
              キャンセル
            <% end %>
          </div>
        </div>
      </section>
    </div>

  </div>
<% end %>

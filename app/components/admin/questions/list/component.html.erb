<% if @questions.any? %>
  <section class="bg-white shadow-sm rounded-xl border border-slate-200 overflow-hidden" aria-label="問題一覧">
    <div class="overflow-x-auto">
      <table class="min-w-full divide-y divide-slate-200">
        <thead class="bg-slate-50">
          <tr>
            <%= header_th "ID", classes: "pl-4 pr-3 sm:pl-6" %>
            <%= header_th "問題文" %>
            <%= header_th "カテゴリー" %>
            <%= header_th "参照", align: :center %>
            <%= header_th "解説", align: :center %>
            <%= header_th "操作", align: :right, classes: "pr-6" %>
          </tr>
        </thead>
        <tbody class="divide-y divide-slate-200 bg-white">
          <%= render Admin::Questions::List::Row::Component.with_collection(@questions) %>
        </tbody>
      </table>
    </div>
  </section>
<% else %>
  <div class="text-center py-16 bg-white rounded-xl border border-slate-200 border-dashed">
    <div class="inline-flex items-center justify-center w-16 h-16 rounded-full bg-slate-50 mb-4" aria-hidden="true">
      <%= helpers.inline_svg_tag "icons/memo.svg", class: "w-8 h-8 text-slate-400" %>
    </div>
    <h3 class="mt-2 text-sm font-bold text-slate-900">問題が登録されていません</h3>
    <p class="mt-1 text-sm text-slate-500">新しい問題を作成してデータベースに追加しましょう。</p>
    <div class="mt-6">
      <%= render Common::Button::Component.new(
            href: new_admin_question_path,
            variant: :primary,
            size: :sm,
            class: "shadow-sm"
          ) do %>
        <%= helpers.inline_svg_tag "icons/plus.svg", class: "w-4 h-4 mr-2", aria_hidden: true %>
        問題を新規作成
      <% end %>
    </div>
  </div>
<% end %>

<header class="bg-white/90 backdrop-blur-sm sticky top-0 z-50 border-b border-slate-200">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex items-center justify-between h-16">

      <div class="flex-shrink-0">
        <%= link_to root_path, class: "flex items-center gap-0.5 hover:opacity-80 transition-opacity" do %>
          <span class="text-slate-900 font-black text-2xl tracking-tighter">PHP8</span>
          <span class="text-blue-600 font-black text-2xl tracking-tighter">Study</span>
        <% end %>
      </div>

      <div class="flex items-center gap-4">

        <% if current_user %>
          <div class="text-right hidden sm:block">
            <div class="text-[10px] text-slate-400 font-bold uppercase tracking-wider">Logged in</div>
            <div class="text-sm font-bold text-slate-700 leading-none"><%= session.dig(:github_info, "nickname") %></div>
          </div>

          <% if session.dig(:github_info, "image") %>
            <%= image_tag session.dig(:github_info, "image"), alt: "#{session.dig(:github_info, "nickname")}のアバター", class: "w-9 h-9 rounded-full border border-slate-200 shadow-sm" %>
          <% end %>

          <%= link_to session_path, data: { turbo_method: :delete }, class: "text-slate-400 hover:text-red-500 transition-colors p-1", title: "ログアウト", aria: { label: "ログアウト" } do %>
             <%= inline_svg_tag "icons/logout.svg", class: "w-5 h-5", aria_hidden: true %>
          <% end %>

        <% else %>
          <%= link_to "GitHubでログイン", "/auth/github", class: "text-sm font-bold text-slate-700 hover:text-blue-600 transition-colors" %>
        <% end %>

      </div>
    </div>
  </div>
</header>

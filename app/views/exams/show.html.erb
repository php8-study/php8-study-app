<% title "模擬試験結果" %>
<% noindex %>

<main class="min-h-screen bg-slate-50 py-12 px-4 sm:px-6 font-sans">
  <div class="max-w-4xl mx-auto">

    <header class="text-center mb-10">
      <h1 class="text-3xl font-extrabold text-slate-900 tracking-tight">試験結果</h1>
      <p class="text-slate-500 mt-2">お疲れ様でした。今回の成績を確認しましょう。</p>
    </header>

    <%= render Exams::ResultReveal::Component.new(exam: @exam, animation: @needs_reveal_animation) do %>

      <%= render Exams::ScoreCard::Component.new(exam: @exam, animation: @needs_reveal_animation) %>

      <%= render Exams::QuestionList::Component.new(questions: @exam_questions, animation: @needs_reveal_animation) %>

      <%= render Exams::StickyNav::Component.new(animation: @needs_reveal_animation) %>

    <% end %>

  </div>
</main>

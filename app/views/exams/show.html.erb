<div class="min-h-screen bg-slate-50 py-12 px-4 sm:px-6">
  <div class="max-w-3xl mx-auto space-y-8">
    
    <div class="flex items-center justify-between">
      <div class="flex items-center gap-3">
        <div class="p-2 bg-emerald-100 rounded-lg text-emerald-600">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-6 9l2 2 4-4"></path></svg>
        </div>
        <h1 class="text-2xl font-bold text-slate-900 tracking-tight">模擬試験</h1>
      </div>
      
      <div class="flex items-center gap-2">
        <span class="text-xs font-bold text-slate-400 uppercase tracking-wider">Question</span>
        <span class="text-xl font-black text-indigo-600"><%= @exam_question.position %></span>
        <span class="text-sm text-slate-400 font-medium">/ <%= @exam.exam_questions.size %></span>
      </div>
    </div>

    <%= render "shared/terminal_display", 
        content: @exam_question.question.content,
        label: "ExamQuestion_#{@exam_question.position}.php" 
    %>

    <%= render "shared/answer_form", 
        question: @exam_question.question, 
        url: answer_exam_exam_question_path(@exam, @exam_question), 
        method: :post,
        button_text: @exam_question.answered? ? "回答を更新する" : "回答を保存する",
        input_name: "question_choice_ids[]", 
        selected_choice_ids: @exam_question.user_choice_ids
    %>

    <div class="pt-8 border-t border-slate-200 grid grid-cols-2 sm:grid-cols-3 gap-4">
      
      <% prev_q = @exam_question.previous_question %>
      <% if prev_q %>
        <%= link_to exam_exam_question_path(@exam, prev_q), class: "flex items-center justify-center px-4 py-3 text-sm font-bold text-slate-600 bg-white border border-slate-300 rounded-xl hover:bg-slate-50 transition-colors" do %>
          <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path></svg>
          前へ
        <% end %>
      <% else %>
        <div class="invisible"></div> <% end %>

      <%= link_to review_exam_path(@exam), class: "flex items-center justify-center px-4 py-3 text-sm font-bold text-slate-600 bg-slate-100 rounded-xl hover:bg-slate-200 transition-colors" do %>
        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 10h16M4 14h16M4 18h16"></path></svg>
        一覧へ
      <% end %>

      <% next_q = @exam_question.next_question %>
      <% if next_q %>
        <%= link_to exam_exam_question_path(@exam, next_q), class: "flex items-center justify-center px-4 py-3 text-sm font-bold text-indigo-700 bg-indigo-50 border border-indigo-200 rounded-xl hover:bg-indigo-100 transition-colors" do %>
          次へ
          <svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path></svg>
        <% end %>
      <% else %>
        <%= link_to review_exam_path(@exam), class: "flex items-center justify-center px-4 py-3 text-sm font-bold text-white bg-red-600 rounded-xl hover:bg-red-700 shadow-md hover:shadow-lg transition-all" do %>
          終了する
          <svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path></svg>
        <% end %>
      <% end %>

    </div>
    
  </div>
</div>

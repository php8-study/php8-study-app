<div class="max-w-screen-lg mx-auto w-full py-12">

  <h1 class="text-3xl font-bold text-gray-900 mb-8">模擬試験の履歴</h1>

  <% if @exams.present? %>
    <div class="bg-white shadow-xl rounded-xl overflow-hidden">
      <table class="min-w-full divide-y divide-gray-200">
        <thead class="bg-gray-50">
          <tr>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">試験日時</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">正答率</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider w-1/3">達成度</th>
            <th class="relative px-6 py-3">
              <span class="sr-only">詳細</span>
            </th>
          </tr>
        </thead>

        <tbody class="bg-white divide-y divide-gray-200">
          <% @exams.each do |exam| %>
            <%
              score = exam.score_percentage
              is_passed = exam.passed?
              
              bar_color = is_passed ? 'bg-indigo-500' : 'bg-red-500'
              bar_width = "width: #{score > 100 ? 100 : score}%;" 
            %>

            <tr>
              <td class="px-6 py-4 whitespace-nowrap">
                <div class="text-sm font-medium text-gray-900">
                  <%= exam.completed_at.strftime("%Y年 %m月%d日 %H時%M分") %>
                </div>
              </td>

              <td class="px-6 py-4 whitespace-nowrap">
                <div class="text-lg font-bold <%= is_passed ? 'text-green-600' : 'text-red-600' %>">
                  <%= "#{score}%" %>
                </div>
              </td>

              <td class="px-6 py-4">
                <div class="flex items-center space-x-2">
                  <div class="flex-1 h-2 bg-gray-200 rounded-full overflow-hidden">
                    <div class="h-full <%= bar_color %>" 
                         style="<%= bar_width %>"> 
                    </div>
                  </div>

                  <div class="whitespace-nowrap w-20 flex justify-center">
                    <% if is_passed %>
                      <span class="text-xl font-extrabold text-green-600 transform rotate-6 origin-center shadow-lg px-2 py-1 border-2 border-green-600 rounded-lg">
                        合格!
                      </span>
                    <% else %>
                      <span class="text-xl font-extrabold text-red-600 transform rotate-6 origin-center shadow-lg px-2 py-1 border-2 border-red-600 rounded-lg">
                        不合格
                      </span>
                    <% end %>
                  </div>
                </div>
              </td>

              <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                <%= link_to '詳細を見る', exam_path(exam), class: 'text-indigo-600 hover:text-indigo-900' %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>

  <% else %>
    <div class="text-center p-10 bg-white rounded-lg shadow-md">
      <p class="text-gray-500 text-lg mb-4">まだ模擬試験の結果がありません。</p>
      <%= link_to 'ランダム問題を解く', root_path, class: 'text-indigo-600 hover:text-indigo-500 font-medium' %>
    </div>
  <% end %>

</div>

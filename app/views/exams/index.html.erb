<% title "模擬試験一覧" %>
<% noindex %>

<main class="min-h-screen bg-slate-50 py-12 px-4 sm:px-6">
  <div class="max-w-3xl mx-auto space-y-8">

    <div class="flex items-center gap-3 mb-8">
      <div class="p-2 bg-indigo-100 rounded-lg text-indigo-600">
        <%= inline_svg_tag "icons/vertical_graph.svg", class: "w-6 h-6", aria_hidden: true %>
      </div>
      <h1 class="text-2xl font-bold text-slate-900 tracking-tight">模擬試験の履歴</h1>
    </div>

    <% if @exams.any? %>
      <div class="mb-6">
        <%= render Exams::ListNavigation::Component.new %>
      </div>

      <div class="space-y-4">
        <%= render Exams::HistoryItem::Component.with_collection(@exams) %>
      </div>

      <div class="mt-8 pt-8 border-t border-slate-200">
        <%= render Exams::ListNavigation::Component.new %>
      </div>

    <% else %>
      <section class="text-center py-12 bg-white rounded-xl shadow-sm border border-slate-100">
        <div class="inline-flex items-center justify-center w-16 h-16 rounded-full bg-slate-50 mb-4">
          <%= inline_svg_tag "icons/note.svg", class: "w-8 h-8 text-slate-300", aria_hidden: true %>
        </div>

        <h2 class="text-lg font-bold text-slate-900 mb-1">まだ履歴がありません</h2>

        <p class="text-slate-500 mb-6">模擬試験を受けて、実力を試してみましょう。</p>

        <%= render Common::Button::Component.new(
          href: new_exam_path,
          variant: :primary,
          size: :lg,
          class: "shadow-md hover:shadow-lg"
        ) do %>
          模擬試験を受ける
        <% end %>
      </section>
    <% end %>

  </div>
</main>

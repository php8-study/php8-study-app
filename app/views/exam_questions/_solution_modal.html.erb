<%# locals: (question:, exam_question:) %>

<div data-controller="modal"
     role="dialog"
     aria-modal="true"
     aria-labelledby="modal-title"
     class="fixed inset-0 z-50 flex justify-center p-4 pointer-events-auto">

  <div class="absolute inset-0 bg-slate-900/60 backdrop-blur-sm transition-opacity"
       data-action="click->modal#close"
       aria-hidden="true"></div>

  <div class="flex w-full min-h-full items-start justify-center p-4 text-center sm:p-0 mt-8">

    <article class="relative z-10 w-full max-w-3xl max-h-[90vh] overflow-y-auto rounded-2xl bg-white text-left shadow-2xl transition-all sm:my-8 border border-slate-200"
             data-action="click->modal#stop">

      <header class="bg-white px-6 py-4 border-b border-slate-100 flex justify-between items-center sticky top-0 z-20">
        <div class="flex items-center gap-3">
          <% if exam_question.correct? %>
            <div class="flex items-center justify-center w-8 h-8 rounded-full bg-emerald-100 text-emerald-600" aria-hidden="true">
              <%= inline_svg_tag "icons/check.svg", class: "w-5 h-5", aria_hidden: true %>
            </div>
            <h2 id="modal-title" class="text-lg font-bold text-slate-800">正解の解説</h2>
          <% else %>
            <div class="flex items-center justify-center w-8 h-8 rounded-full bg-red-100 text-red-600" aria-hidden="true">
              <%= inline_svg_tag "icons/x.svg", class: "w-5 h-5", aria_hidden: true %>
            </div>
            <h2 id="modal-title" class="text-lg font-bold text-slate-800">不正解の解説</h2>
          <% end %>

          <% if question.category %>
            <span class="px-2.5 py-0.5 rounded-full text-xs font-bold bg-slate-100 text-slate-600 border border-slate-200">
              <%= question.category.name %>
            </span>
          <% end %>
        </div>

        <button type="button"
                class="text-slate-400 hover:text-slate-600 transition-colors p-1 rounded-full hover:bg-slate-100 cursor-pointer"
                data-action="modal#close"
                aria-label="閉じる">
          <%= inline_svg_tag "icons/x.svg", class: "h-6 w-6", aria_hidden: true %>
        </button>
      </header>

      <div class="px-6 py-6 space-y-8 bg-slate-50">

        <section>
          <h3 class="text-xs font-bold text-slate-400 uppercase tracking-wider mb-2 ml-1">Question</h3>
          <%= render "shared/terminal_display", content: question.content, label: "Question.php" %>
        </section>

        <%= render "shared/choices_feedback", question: question, user_choice_ids: exam_question.user_choice_ids %>
        <%= render "shared/reference_info", question: question %>

      </div>

      <footer class="bg-white px-6 py-4 border-t border-slate-100 flex justify-end sticky bottom-0 z-20">
        <button type="button" class="inline-flex justify-center rounded-xl bg-slate-800 px-6 py-2.5 text-sm font-bold text-white shadow-sm hover:bg-slate-700 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-slate-600 transition-all cursor-pointer" data-action="modal#close">
          閉じる
        </button>
      </footer>

    </article>
  </div>
</div>

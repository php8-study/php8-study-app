<tr class="hover:bg-slate-50 transition-colors group" id="<%= dom_id(question) %>">

  <th scope="row" class="whitespace-nowrap py-4 pl-4 pr-3 text-sm font-medium text-slate-900 sm:pl-6 text-left">
    #<%= question.id %>
  </th>

  <td class="px-3 py-4 text-sm text-slate-600 max-w-xs truncate" title="<%= question.content %>">
    <%= question.content.truncate(40) %>
  </td>

  <td class="whitespace-nowrap px-3 py-4 text-sm text-slate-600">
    <% if question.category %>
      <span class="inline-flex items-center rounded-md bg-slate-100 px-2 py-1 text-xs font-medium text-slate-600 ring-1 ring-inset ring-slate-500/10">
        <%= question.category.name %>
      </span>
    <% else %>
      <span class="text-slate-400" aria-label="なし">-</span>
    <% end %>
  </td>

  <td class="whitespace-nowrap px-3 py-4 text-sm text-center">
    <% if question.official_page.present? %>
      <span class="inline-flex items-center rounded-full bg-emerald-50 px-2 py-1 text-xs font-medium text-emerald-700 ring-1 ring-inset ring-emerald-600/20">
        あり
      </span>
    <% else %>
      <span class="inline-flex items-center rounded-full bg-slate-50 px-2 py-1 text-xs font-medium text-slate-400 ring-1 ring-inset ring-slate-500/10">
        なし
      </span>
    <% end %>
  </td>

  <td class="whitespace-nowrap px-3 py-4 text-sm text-center">
    <% if question.explanation.present? %>
      <span class="inline-flex items-center rounded-full bg-emerald-50 px-2 py-1 text-xs font-medium text-emerald-700 ring-1 ring-inset ring-emerald-600/20">
        あり
      </span>
    <% else %>
      <span class="inline-flex items-center rounded-full bg-slate-50 px-2 py-1 text-xs font-medium text-slate-400 ring-1 ring-inset ring-slate-500/10">
        なし
      </span>
    <% end %>
  </td>

  <td class="relative whitespace-nowrap py-4 pl-3 pr-4 text-right text-sm font-medium sm:pr-6">
    <div class="flex justify-end gap-2">
      <%= link_to edit_admin_question_path(question),
          class: "p-2 text-indigo-600 hover:bg-indigo-50 rounded-lg transition-colors",
          title: "編集",
          aria: { label: "問題ID:#{question.id}を編集" } do %>
        <%= inline_svg_tag "icons/edit.svg", class: "w-5 h-5", aria_hidden: true %>
      <% end %>

      <%= link_to admin_question_path(question),
          data: { turbo_method: :delete, turbo_confirm: "問題ID:#{question.id} を本当に削除しますか？" },
          class: "p-2 text-red-600 hover:bg-red-50 rounded-lg transition-colors",
          title: "削除",
          aria: { label: "問題ID:#{question.id}を削除" } do %>
        <%= inline_svg_tag "icons/trash.svg", class: "w-5 h-5", aria_hidden: true %>
      <% end %>
    </div>
  </td>
</tr>

<% title "問題の編集" %>
<% noindex %>

<main class="max-w-5xl mx-auto py-8 px-4 sm:px-6">

  <header class="flex justify-between items-center mb-8">
    <div class="flex items-center gap-3">
      <div class="p-2 bg-indigo-100 rounded-lg text-indigo-600" aria-hidden="true">
        <%= inline_svg_tag "icons/edit.svg", class: "w-6 h-6", aria_hidden: true %>
      </div>
      <h1 class="text-2xl font-bold text-slate-900 tracking-tight">問題の編集</h1>
    </div>

    <%= link_to admin_questions_path, class: "inline-flex items-center text-sm font-bold text-slate-600 bg-white border border-slate-300 px-4 py-2 rounded-lg hover:bg-slate-50 transition-colors shadow-sm" do %>
      <%= inline_svg_tag "icons/left_arrow.svg", class: "w-4 h-4 mr-2", aria_hidden: true %>
      一覧へ戻る
    <% end %>
  </header>

  <%= render Admin::Questions::Form::Component.new(question: @question) %>
</main>

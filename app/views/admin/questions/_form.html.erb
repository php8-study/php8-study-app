<%= form_with model: [:admin, question], class: "space-y-8", data: { controller: "nested-form" } do |f| %>

  <template data-nested-form-target="template">
    <%= f.fields_for :question_choices, QuestionChoice.new, child_index: "NEW_RECORD" do |choice_fields| %>
      <%= render "admin/question_choices/choice_fields", f: choice_fields %>
    <% end %>
  </template>

  <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">

    <div class="lg:col-span-2 space-y-6">

      <section class="bg-white shadow-sm rounded-xl border border-slate-200 p-6" aria-label="問題詳細">
        <div class="space-y-6">
          <div>
            <%= f.label :content, "問題文", class: "block text-sm font-bold text-slate-600 mb-2" %>
            <%= f.text_area :content, rows: 5, class: "w-full rounded-lg border-slate-300 px-4 py-3 focus:border-indigo-500 focus:ring-indigo-500 text-slate-700 shadow-sm placeholder-slate-300 transition-shadow", placeholder: "ここに問題文を入力してください..." %>
          </div>

          <div>
            <div class="flex items-center justify-between mb-2">
              <%= f.label :explanation, "解説", class: "block text-sm font-bold text-slate-600" %>
              <span class="text-xs text-slate-500 font-bold bg-slate-100 px-2 py-1 rounded border border-slate-200">任意</span>
            </div>

            <%= f.text_area :explanation, rows: 8, class: "w-full rounded-lg border-slate-300 px-4 py-3 focus:border-indigo-500 focus:ring-indigo-500 text-slate-700 shadow-sm placeholder-slate-300 bg-slate-50/50 transition-shadow", placeholder: "解説を入力..." %>
          </div>
        </div>
      </section>

      <section class="bg-white shadow-sm rounded-xl border border-slate-200 p-6" aria-labelledby="choices-heading">
        <div class="flex items-center justify-between mb-6">
          <h2 id="choices-heading" class="text-lg font-bold text-indigo-900">選択肢の管理</h2>
          <span class="text-xs text-indigo-600 bg-indigo-50 px-2.5 py-1 rounded-full font-medium">正解にチェックを入れてください</span>
        </div>

        <div id="choices_container" data-nested-form-target="target" class="space-y-3" role="list" aria-label="選択肢リスト">
          <%= f.fields_for :question_choices do |choice_fields| %>
            <%= render "admin/question_choices/choice_fields", f: choice_fields %>
          <% end %>
        </div>

        <div class="mt-6 pt-4 border-t border-slate-100">
          <button type="button" data-action="nested-form#add" class="w-full inline-flex items-center justify-center px-4 py-3 border-2 border-dashed border-slate-300 rounded-lg text-sm font-bold text-slate-500 hover:border-indigo-400 hover:text-indigo-600 hover:bg-indigo-50/50 transition-all cursor-pointer">
            <svg class="w-5 h-5 mr-2 text-slate-400 group-hover:text-indigo-500" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true" focusable="false"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path></svg>
            選択肢を追加
          </button>
        </div>
      </section>
    </div>

    <div class="lg:col-span-1 space-y-6">
      <section class="bg-white shadow-sm rounded-xl border border-slate-200 p-6 sticky top-24" aria-labelledby="settings-heading">
        <h2 id="settings-heading" class="text-sm font-bold text-indigo-900 uppercase tracking-wider mb-6">設定</h2>

        <div class="space-y-6">
          <div>
            <%= f.label :category_id, "カテゴリー", class: "block text-sm font-bold text-slate-600 mb-2" %>
            <%= f.collection_select :category_id, Category.all, :id, :name, {}, class: "w-full rounded-lg border-slate-300 px-4 py-3 focus:border-indigo-500 focus:ring-indigo-500 text-slate-700 shadow-sm transition-shadow" %>
          </div>

          <div>
            <%= f.label :official_page, "公式テキスト参照", class: "block text-sm font-bold text-slate-600 mb-2" %>
            <div class="relative rounded-md shadow-sm">
              <div class="pointer-events-none absolute inset-y-0 left-0 flex items-center pl-4" aria-hidden="true">
                <span class="text-slate-400 font-medium">P.</span>
              </div>
              <%= f.text_field :official_page, class: "block w-full rounded-lg border-slate-300 pl-10 pr-4 py-3 focus:border-indigo-500 focus:ring-indigo-500 text-slate-700 shadow-sm placeholder-slate-300 transition-shadow", placeholder: "25-28" %>
            </div>
            <p class="mt-2 text-xs text-slate-500">例: 152, 25-28</p>
          </div>

          <div class="pt-6 border-t border-slate-100 flex flex-col gap-3">
            <%= f.submit "保存する", class: "w-full flex justify-center py-3 px-4 border border-transparent rounded-lg shadow-sm text-sm font-bold text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition-all cursor-pointer" %>
            <%= link_to "キャンセル", admin_questions_path, class: "w-full flex justify-center py-3 px-4 border border-slate-300 rounded-lg shadow-sm text-sm font-bold text-slate-700 bg-white hover:bg-slate-50 transition-all" %>
          </div>
        </div>
      </section>
    </div>

  </div>
<% end %>

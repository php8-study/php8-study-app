<% title "管理画面" %>
<% noindex %>

<main class="min-h-screen bg-slate-50 py-12 px-4 sm:px-6 font-sans">
  <div class="max-w-2xl mx-auto">

    <header class="text-center mb-10">
      <h1 class="text-3xl font-extrabold text-slate-900 tracking-tight">管理画面</h1>
      <p class="text-slate-500 mt-2">管理する項目を選択してください</p>
    </header>

    <nav class="space-y-6" aria-label="管理メニュー">

      <%= render "shared/card",
          title: "問題一覧",
          description: "問題の作成・編集・削除を行います。",
          url: admin_questions_path,
          theme_color: "blue",
          icon_key: "clipboard" %>

      <%= render "shared/card",
          title: "カテゴリー一覧",
          description: "問題カテゴリーの管理を行います。",
          url: admin_categories_path,
          theme_color: "orange",
          icon_key: "tag" %>

    </nav>

    <footer class="mt-8 pt-8 border-t border-slate-200 flex justify-center">
      <%= link_to root_path, class: "text-slate-500 hover:text-indigo-600 font-bold flex items-center transition-colors" do %>
        <%= inline_svg_tag "icons/left_arrow.svg", class: "w-4 h-4 mr-2", aria_hidden: true %>
        ユーザー画面に戻る
      <% end %>
    </footer>

  </div>
</main>

<% title "カテゴリーの編集" %>
<% noindex %>

<main class="max-w-5xl mx-auto py-8 px-4 sm:px-6">

  <header class="flex justify-between items-center mb-8">
    <div class="flex items-center gap-3">
      <div class="p-2 bg-indigo-100 rounded-lg text-indigo-600">
        <%= inline_svg_tag "icons/check.svg", class: "w-6 h-6", aria_hidden: true %>
      </div>
      <h1 class="text-2xl font-bold text-slate-900 tracking-tight">カテゴリーの編集</h1>
    </div>

    <%= link_to admin_categories_path, class: "inline-flex items-center text-sm font-bold text-slate-600 bg-white border border-slate-300 px-4 py-2 rounded-lg hover:bg-slate-50 transition-colors shadow-sm" do %>
      <%= inline_svg_tag "icons/left_arrow.svg", class: "w-4 h-4 mr-2", aria_hidden: true %>
      一覧へ戻る
    <% end %>
  </header>

    <%= render Admin::Categories::List::Row::Form::Component.new(
        category: @category,
        grid_cols: Admin::Categories::List::Component::GRID_COLS
      ) %>

</main>

<%= turbo_frame_tag category do %>
  <div class="grid items-center hover:bg-slate-50 transition-colors duration-150 px-4 py-4 <%= category_grid_cols %>" role="listitem">

    <div class="flex justify-center">
      <span class="inline-flex items-center justify-center w-8 h-8 rounded-lg bg-slate-100 text-slate-600 font-bold text-sm">
        <%= category.chapter_number %>
      </span>
    </div>

    <div class="pl-4 font-bold text-slate-700">
      <%= category.name %>
    </div>

    <div></div>

    <div class="flex items-center justify-end gap-3 pr-4">
      <span class="text-sm font-mono font-bold text-slate-600 tabular-nums w-12 text-right">
        <%= category.weight %>%
      </span>
      <div class="w-24 h-1.5 bg-slate-100 rounded-full overflow-hidden" aria-hidden="true">
        <div class="h-full bg-indigo-500 rounded-full" style="<%= progress_bar_style(category.weight) %>"></div>
      </div>
    </div>

    <div class="flex items-center justify-end gap-2 pr-2">
      <%= link_to edit_admin_category_path(category),
          data: { turbo_frame: dom_id(category) },
          class: "p-2 text-indigo-600 hover:bg-indigo-50 rounded-lg transition-colors",
          title: "編集",
          aria: { label: "#{category.name}を編集" } do %> <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true" focusable="false"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path></svg>
      <% end %>

      <%= link_to admin_category_path(category),
          data: { turbo_method: :delete, turbo_confirm: "カテゴリー「#{category.name}」を削除しますか？" },
          class: "p-2 text-red-600 hover:bg-red-50 rounded-lg transition-colors",
          title: "削除",
          aria: { label: "#{category.name}を削除" } do %> <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true" focusable="false"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path></svg>
      <% end %>
    </div>
  </div>
<% end %>

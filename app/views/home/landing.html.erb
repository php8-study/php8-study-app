<% content_for :full_width, true %>
<% content_for :hide_header_footer, true %>

<div class="font-sans bg-white overflow-hidden relative">

  <div aria-hidden="true" class="absolute top-0 right-0 w-full h-full pointer-events-none z-0">
    <div class="absolute top-0 right-[-25%] w-[70%] h-[120%] bg-gradient-to-bl from-blue-100 via-blue-50/80 to-transparent rounded-l-[40%] transform -rotate-6 scale-110 origin-top-right"></div>
  </div>

  <header class="relative z-10 w-full py-6 px-6 lg:px-12 flex justify-between items-center">
    <div class="flex items-center space-x-2">
      <span class="text-2xl font-extrabold text-slate-900 tracking-tight">
        PHP8<span class="text-blue-600">Study</span>
      </span>
    </div>
    <div class="text-sm font-medium text-slate-500">
      PHP8技術者認定初級試験対応
    </div>
  </header>

  <main class="container relative z-10 mx-auto px-6 lg:px-12  flex-grow h-auto lg:h-[calc(100vh-80px)] flex items-center py-12 lg:py-0">
    <div class="flex flex-col lg:flex-row items-center justify-between w-full gap-12">
      <%= render Landing::HeroContent::Component.new(questions_count: @questions_count) %>
      <%= render Landing::HeroVisual::Component.new %>
    </div>
  </main>

  <footer class="relative z-10 w-full py-4 text-center lg:absolute lg:bottom-2">
    <div class="flex justify-center items-center gap-6 text-xs text-slate-400 font-medium">
      <%= link_to "利用規約", terms_path, class: "hover:text-blue-600 transition-colors" %>
      <%= link_to "プライバシーポリシー", privacy_path, class: "hover:text-blue-600 transition-colors" %>
      <%= link_to "運営者情報", "https://x.com/sekito1107", target: "_blank", rel: "noopener noreferrer", "aria-describedby": "operator-link-desc", class: "hover:text-blue-600 transition-colors" %>
      <span id="operator-link-desc" hidden>新しいタブで開きます</span>
    </div>
    <p class="mt-2 text-[10px] text-slate-300 font-light">
       © <%= Time.current.year %> PHP8 Study
    </p>
  </footer>
</div>

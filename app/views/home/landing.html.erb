<% content_for :full_width, true %>
<% content_for :hide_header_footer, true %>

<div class="font-sans bg-white min-h-screen overflow-hidden relative">

  <%= render "background_decoration" %>

  <header class="relative z-10 w-full py-6 px-6 lg:px-12 flex justify-between items-center">
    <div class="flex items-center space-x-2">
      <span class="text-2xl font-extrabold text-slate-900 tracking-tight">
        PHP8<span class="text-blue-600">Study</span>
      </span>
    </div>
    <div class="text-sm font-medium text-slate-500">
      PHP8技術者認定初級試験対応
    </div>
  </header>

  <main class="container relative z-10 mx-auto px-6 lg:px-12 h-auto lg:h-[calc(100vh-80px)] flex items-center py-12 lg:py-0">
    <div class="flex flex-col lg:flex-row items-center justify-between w-full gap-12">

      <%= render "hero_content" %>

      <%= render "hero_visual" %>

    </div>
  </main>
</div>

<div class="flex-1 bg-white rounded-xl shadow p-6 flex flex-col">
  <h3 class="text-2xl font-bold text-blue-600 mb-4">
    <%= feature[:title] %>
  </h3>
  <ul class="space-y-3 text-gray-700 text-lg">
    <% feature[:items].each do |item| %>
      <li class="flex items-center">
        <span class="w-3 h-3 mr-3 bg-blue-500 rounded-full flex-shrink-0"></span>
        <%= item %>
      </li>
    <% end %>
  </ul>
</div>

<%
  theme = card_theme_classes(local_assigns[:theme_color])
  icon  = card_icon_path(local_assigns[:icon_path])
%>

<%= link_to url, class: "group flex items-center bg-white rounded-xl p-6 shadow-sm border border-slate-100 #{theme[:border]} hover:shadow-lg hover:scale-[1.02] transition-all duration-300 ease-out" do %>

  <div class="flex-shrink-0 mr-6">
    <div class="w-14 h-14 rounded-xl bg-gradient-to-br from-white to-slate-50 border border-slate-100 flex items-center justify-center shadow-inner group-hover:bg-gradient-to-br group-hover:from-white group-hover:to-white transition-colors">
      <svg class="w-8 h-8 <%= theme[:text] %> drop-shadow-sm group-hover:scale-110 transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="<%= icon %>"></path>
      </svg>
    </div>
  </div>

  <div class="flex-1 min-w-0">
    <h3 class="text-xl font-bold text-slate-800 mb-1 group-hover:text-indigo-600 transition-colors">
      <%= title %>
    </h3>
    <p class="text-sm font-medium text-slate-500">
      <%= description %>
    </p>
  </div>

  <div class="flex-shrink-0 ml-4 opacity-0 -translate-x-2 group-hover:opacity-100 group-hover:translate-x-0 transition-all duration-300">
    <div class="w-10 h-10 rounded-full bg-slate-50 flex items-center justify-center">
      <svg class="w-5 h-5 text-indigo-500" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path></svg>
    </div>
  </div>
<% end %>

<%# locals: question:, url:, method:, button_text:, input_name:, selected_choice_ids:, guard_answer: %>

<div data-controller="answer-guard" data-answer-guard-active-value="<%= guard_answer %>">
  <%= form_with url: url, method: method, local: true, class: "space-y-8" do |f| %>

    <%= render "shared/choices",
        question: question,
        input_name: input_name,
        selected_choice_ids: selected_choice_ids,
        disabled: false %>

    <div class="flex justify-end pt-4">
      <button type="submit"
              data-action="click->answer-guard#submit"
              class="group relative inline-flex items-center justify-center px-8 py-4 text-base font-bold text-white transition-all duration-200 bg-indigo-600 rounded-xl hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-600 hover:shadow-lg">
        <span><%= button_text %></span>
        <%= inline_svg_tag "icons/rright_arrow.svg", class: "w-5 h-5 ml-2 transition-transform duration-300 group-hover:translate-x-1", aria_hidden: true %>
      </button>
    </div>

  <% end %>
</div>

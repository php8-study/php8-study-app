<%# locals: (is_correct:) %>
<%
  theme = is_correct ? {
    bg: "bg-emerald-50",
    border: "border-emerald-200",
    icon_bg: "bg-emerald-100",
    text: "text-emerald-800",
    sub_text: "text-emerald-600",
    label: "正解！",
    message: "素晴らしい！この調子で進めましょう。",
    icon_name: "check"
  } : {
    bg: "bg-red-50",
    border: "border-red-200",
    icon_bg: "bg-red-100",
    text: "text-red-800",
    sub_text: "text-red-600",
    label: "不正解...",
    message: "解説を読んで復習しましょう。",
    icon_name: "x"
  }
%>

<div class="rounded-2xl border <%= theme[:border] %> <%= theme[:bg] %> p-6 flex items-center gap-5 shadow-sm">
  <div class="flex-shrink-0 w-14 h-14 rounded-full <%= theme[:icon_bg] %> flex items-center justify-center">
    <%= inline_svg_tag "icons/#{theme[:icon_name]}.svg",
        class: "w-8 h-8 #{theme[:sub_text]}",
        aria_hidden: true %>
  </div>
  <div>
    <h2 class="text-2xl font-black <%= theme[:text] %> tracking-tight"><%= theme[:label] %></h2>
    <p class="text-sm font-bold <%= theme[:sub_text] %> mt-1"><%= theme[:message] %></p>
  </div>
</div>

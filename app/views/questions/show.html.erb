<div class="max-w-xl mx-auto py-8">
  <h1 class="text-3xl font-bold text-gray-900 mb-6">ランダム問題</h1>

  <div class="bg-white p-6 shadow-lg rounded-xl mb-6">
    <h2 class="text-lg font-semibold text-indigo-700 mb-4">問題 <%= @question.id
 %></h2>
    <p class="text-xl text-gray-800 whitespace-pre-wrap mb-6"><%= @question.content
 %></p>

    <%= form_with url: solution_question_path(@question), method: :get, local: true, class: "space-y-4"


 do %>

      <div class="space-y-3">
        <% @question.question_choices.each






 do |choice| %>
          <label class="flex items-center bg-gray-50 p-3 rounded-lg border border-gray-200 hover:bg-indigo-50 cursor-pointer transition-colors">

            <%= check_box_tag "user_answer_ids[]", choice.id, false, class: "w-5 h-5 text-indigo-600 border-gray-300 rounded focus:ring-indigo-500 mr-3"
 %>

            <span class="text-lg text-gray-700"><%= choice.content
 %></span>
          </label>
        <% end %>
      </div>

      <div class="pt-4">
        <button type="submit" class="w-full bg-indigo-600 text-white px-6 py-3 rounded-lg font-semibold hover:bg-indigo-700 transition-colors">
          解答する
        </button>
      </div>
    <% end %>
  </div>
</div>
